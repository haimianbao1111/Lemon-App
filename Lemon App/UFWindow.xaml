<Window x:Class="Lemon_App.UFWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lemon_App"
        mc:Ignorable="d"
        Title="用户反馈" Height="400" Width="300" WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip" Background="{x:Null}" SizeChanged="Window_SizeChanged" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid x:Name="Page" Background="White" >
        <Grid.Clip>
            <RectangleGeometry RadiusX="3" RadiusY="3">
                <RectangleGeometry.Rect>
                    <Rect Width="300" Height="400"/>
                </RectangleGeometry.Rect>
            </RectangleGeometry>
        </Grid.Clip>
        <local:UserFeedback Margin="0,30,0,0" />
        <Grid Height="30" VerticalAlignment="Top" Background="#FFF6F7F9">
            <Border x:Name="CLOSE"  HorizontalAlignment="Left" Margin="12,8,0,8" Width="13" Height="13" Background="#FFFC6762" CornerRadius="13" MouseDown="CLOSE_MouseDown"/>
        </Grid>
    </Grid>
</Window>
