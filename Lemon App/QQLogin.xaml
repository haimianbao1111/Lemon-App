<Window x:Class="Lemon_App.QQLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lemon_App"
        xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="登录到小萌" Height="350" Background="Transparent" Width="525" WindowStyle="None" ResizeMode="NoResize">
    <Border BorderBrush="#FF007ACC" Background="White" BorderThickness="2" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" >
            <WindowsFormsHost Margin="0,40,0,0" >
                <Forms:WebBrowser x:Name="web" Navigated="web_Navigated_1"/>
            </WindowsFormsHost>
            <Border MouseDown="CLOSE_MouseDown" HorizontalAlignment="Left" Height="14" Margin="10,13,0,0" VerticalAlignment="Top" Width="14" Background="#FF1B1B1C" CornerRadius="100"/>
            <TextBlock HorizontalAlignment="Left" Height="15" Margin="30,13,0,0" TextWrapping="Wrap" Text="登录到小萌" VerticalAlignment="Top" Width="81" Foreground="#FF2D2D30"/>
        </Grid>
    </Border>
</Window>
